<h1>News Feed</h1><%= link_to "Post a New Status", new_update_path, class: "btn btn-primary" %>

<% @statuses.each do |status| %>
		<div class="status media">
			
			<a class="pull-left" href="#">
				<%= image_tag status.user.gravatar_url, :class => "media-object" %>
			</a>
			
			<div class="media-body">
				<strong class="media-heading"><%= status.user.full_name %></strong>
				<p><%= status.content %></p>
				<div class="meta">
					<%= link_to time_ago_in_words(status.created_at) + " ago", status %>
					<span class="admin">
						- <%= link_to "Edit", edit_status_path(status) %> -
						<%= link_to "Delete", status, method: :delete, data: { Confirm: "Are you sure?"} %>
					</span>
				</div>
			</div>
		</div>
<% end %>


<h2>Sign In</h2>

<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), defaults: {input_html: {class: "form-control"}}, html: {class: "form-horizontal"}, html: {class: "well"}) do |f| %>
		<%= f.input :email %>
		<%= f.input :password %>
		
		<% if devise_mapping.rememberable? -%>
			<%= f.input :remember_me, as: :boolean %>
		<% end -%>
		
		<%= f.button :submit, "Sign in", :class => "btn-primary" %>
		
		
	<% end %>
	
	<%= render "devise/shared/links" %>